
@{
    ViewBag.Title = "Register";
}

<h2 class="text-warning">Register</h2>

<form action="/Home/Confirmation" method="post">
    <div class="control-label col-md-2">
        First Name <input type="text" name="FirstName" required /><br /><br />
        Last Name <input type="text" name="LastName" required /><br /><br />
        Email <input type="email" name="email" required /><br /><br />
        Will you be attending?  <div class="form-group" id="attendance">
            <select class="custom-select">
                <option selected="">Select One</option>
                <option value="1">Prolly</option>
                <option value="2">Nah</option>
            </select>
        </div><br />
        Which day?
        <div class="form-group" id="partyDate" name ="partyDate">
            <select class="custom-select">
                <option selected="">Select One</option>
                <option value="1">Friday, 12/14</option>
                <option value="2">Sat, 12/15</option>
            </select>
        </div><br />
        Will you be bringing a guest?
        <div class="form-group" id="guest">
            <select class="custom-select">
                <option selected="">Select One</option>
                <option value="1">Hard Maybe</option>
                <option value="2">Nope</option>
            </select>
        </div><br />
        Guest First Name <input type="text" name="GuestFirstName"  /><br /><br />
        Guest Last Name <input type="text" name="GuestLastName"  /><br /><br />
    
        <input type="submit" class="btn-warning" />
    </div>
</form>